<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add"/>
            Add Target
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Target.DisplayName" Label="Display Name" />
        <MudTextField @bind-Value="Target.Description" Label="Description" />
        <MudTextField @bind-Value="Target.Url" Label="Url" />
        <MudTextField @bind-Value="Target.CronSchedule" Label="Cron Schedule" />
        <MudSelect 
            T="string" 
            Label="Change Type" 
            Value="Target.ChangeType.ToString()" 
            ValueChanged="@((string value) => SetChangeType(value))">
            @foreach (var type in Enum.GetValues(typeof(ChangeType)))
            {
                <MudSelectItem Value="@type.ToString()" />
            }
        </MudSelect>
        <MudTextField @bind-Value="Target.HtmlTag" Label="Html Tag" />
        <MudSelect
            T="string" 
            Label="Selector Type" 
            Value="Target.SelectorType.ToString()" 
            ValueChanged="@((string value) => SetSelectorType(value))">
            @foreach (var type in Enum.GetValues(typeof(SelectorType)))
            {
                <MudSelectItem Value="@type.ToString()" />
            }
        </MudSelect>
        <MudTextField @bind-Value="Target.SelectorValue" Label="Selector Value" />
        <MudTextField @bind-Value="Target.ExpectedValue" Label="Expected Value" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="AddTargetAsync">Add</MudButton>
    </DialogActions>
</MudDialog>
