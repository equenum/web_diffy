@attribute [Route(Urls.Settings)]

<PageTitle>Settings</PageTitle>

<MudGrid id="settings-header" Justify="Justify.Center">
    <MudItem xs="12">
        <MudPaper Class="py-2 px-2">
            <MudText Typo="Typo.h5" Align="Align.Left">Settings</MudText>
            <MudText Typo="Typo.subtitle1" Align="Align.Left">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos blanditiis tenetur</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Class="py-2 px-2">
            <MudCheckBox @bind-Value="UserAppSettings.AreDeletePopUpsEnabled" Label="AreDeletePopUpsEnabled"></MudCheckBox>
            <MudCheckBox @bind-Value="UserAppSettings.AreItemIdColumnsEnabled" Label="AreItemIdColumnsEnabled"></MudCheckBox>
            <MudCheckBox @bind-Value="UserAppSettings.AreItemIdsShortened" Label="AreItemIdsShortened"></MudCheckBox>
            <MudCheckBox @bind-Value="UserAppSettings.AreCollapsePanelsExpanded" Label="AreCollapsePanelsExpanded"></MudCheckBox>
            <MudNumericField @bind-Value="UserAppSettings.ItemIdSubSectionLength" Label="ItemIdSubSectionLength" Min="1" Max="12" />
            <MudTextField 
                T="string"
                Value="ConvertArrayBasedValue(UserAppSettings.GridPageSizeOptions)"
                ValueChanged="@((string value) => UpdateGridPageSizeOptions(value))"
                Label="GridPageSizeOptions" />
            <MudTextField 
                T="string"
                Value="ConvertArrayBasedValue(UserAppSettings.LargeGridPageSizeOptions)"
                ValueChanged="@((string value) => UpdateLargeGridPageSizeOptions(value))"
                Label="LargeGridPageSizeOptions" />
            <MudButton OnClick="Reset">Reset</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
