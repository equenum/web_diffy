@attribute [Route(Urls.Settings)]

<PageTitle>Settings</PageTitle>

<MudGrid id="settings-header" Justify="Justify.Center">
    <MudItem xs="12">
        <MudPaper Class="py-2 px-2">
            <MudText Typo="Typo.h5" Align="Align.Left">Settings</MudText>
            <MudText Typo="Typo.subtitle1" Align="Align.Left">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quos blanditiis tenetur</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Class="py-2 px-2">
            @if(CopiedUserSettings is not null)
            {
                <MudCheckBox @bind-Value="CopiedUserSettings.AreDeletePopUpsEnabled" Label="AreDeletePopUpsEnabled"></MudCheckBox>
                <MudCheckBox @bind-Value="CopiedUserSettings.AreItemIdColumnsEnabled" Label="AreItemIdColumnsEnabled"></MudCheckBox>
                <MudCheckBox @bind-Value="CopiedUserSettings.AreItemIdsShortened" Label="AreItemIdsShortened"></MudCheckBox>
                <MudCheckBox @bind-Value="CopiedUserSettings.AreCollapsePanelsExpanded" Label="AreCollapsePanelsExpanded"></MudCheckBox>
                <MudCheckBox @bind-Value="CopiedUserSettings.AreTargetsCreatedAsActive" Label="AreTargetsCreatedAsActive"></MudCheckBox>
                <MudNumericField @bind-Value="CopiedUserSettings.ItemIdSubSectionLength" Label="ItemIdSubSectionLength" Min="1" Max="12" />
                <MudTextField 
                    T="string"
                    Value="ConvertArrayBasedValue(CopiedUserSettings.GridPageSizeOptions)"
                    ValueChanged="@((string value) => UpdateGridPageSizeOptions(value))"
                    Label="GridPageSizeOptions" />
                <MudTextField 
                    T="string"
                    Value="ConvertArrayBasedValue(CopiedUserSettings.LargeGridPageSizeOptions)"
                    ValueChanged="@((string value) => UpdateLargeGridPageSizeOptions(value))"
                    Label="LargeGridPageSizeOptions" />
            }
            <MudButton OnClick="Reset">Reset</MudButton>
            <MudButton Color="Color.Primary" OnClick="Save">Save</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
