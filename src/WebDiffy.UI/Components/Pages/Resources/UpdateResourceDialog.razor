<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit"/>
            Edit Resource
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@CopiedResource.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="CopiedResource.DisplayName" Label="Display Name" />
        <MudTextField @bind-Value="CopiedResource.Description" Label="Description" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="UpdateResourceAsync">Edit</MudButton>
    </DialogActions>
</MudDialog>
