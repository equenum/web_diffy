<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Update"/>
            Update Resource
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@Resource.Id" Label="Id" ReadOnly="true" />
        <MudTextField @bind-Value="Resource.DisplayName" Label="Display Name" />
        <MudTextField @bind-Value="Resource.Description" Label="Description" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="UpdateResourceAsync">Update</MudButton>
    </DialogActions>
</MudDialog>
