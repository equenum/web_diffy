<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add"/>
            Add Resource
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Resource.DisplayName" Label="Display Name" />
        <MudTextField @bind-Value="Resource.Description" Label="Description" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="AddResourceAsync">Add</MudButton>
    </DialogActions>
</MudDialog>