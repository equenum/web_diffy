{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ChangeMonitor": "Host=<host>; Username=<user>; Password=<password>; Database=<db_name>;"
  },
  "ChangeMonitor": {
    "DefaultResourcePageSize": 10,
    "DefaultTargetPageSize": 10,
    "DefaultTargetSnapshotPageSize": 10,
    "AreNotificationsEnabled": false,
    "JobRetry": {
      "MaxAttempts": 3,
      "Delay": "00:00:05"
    }
  }
}
